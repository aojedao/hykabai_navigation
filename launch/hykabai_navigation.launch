<launch>
  <!-- Arguments -->
  
  <arg name="map_file" default="$(find hykabai_navigation)/maps/map.yaml"/>
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="false"/>

  <!-- Hykabai -->
  <include file="$(find hykabai_simulations)/launch/rviz.launch">
  </include>

  <!-- Map server -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)">
    <param name="global_frame_id" value="map" />
  </node>

  <!-- AMCL -->
  <include file="$(find hykabai_navigation)/launch/amcl.launch"/>

  <!-- move_base -->
  <include file="$(find hykabai_navigation)/launch/move_base.launch">
    <arg name="model" value="burger" />
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

  <!-- rviz -->
  
</launch>
